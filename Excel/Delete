<script>
    // ... (your existing script) ...

    function addRow() {
        // ... (existing code)

        // Add a "Delete" button to the new row
        var deleteButton = document.createElement('button');
        deleteButton.textContent = 'Delete';
        deleteButton.onclick = function() {
            deleteRow(this);
        };

        var newCell = newRow.insertCell(cells.length); // Insert the "Delete" button at the end of the row
        newCell.appendChild(deleteButton);

        // ... (existing code)
    }

    function deleteRow(button) {
        var table = document.getElementById('dataTable');
        var row = button.parentNode.parentNode; // Get the parent row of the clicked button
        var rowIndex = row.rowIndex;

        // Subtract the grand total of the deleted row from the overall amount
        allTotalAmount -= parseFloat(table.rows[rowIndex].cells[9].textContent); // Assuming Grand Total is at index 9

        // Update All Total Amount field
        document.getElementById('allTotalAmount').value = allTotalAmount.toFixed(2);

        // Remove the row from the table
        table.deleteRow(rowIndex);
    }

    // ... (existing script) ...
</script>
